<Window x:Class="StudentsPayment.AddEditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать комнату" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Номер комнаты:"/>
            <TextBox x:Name="RoomNumberTextBox" Text="{Binding room_number}"/>
            <TextBlock Text="Вместимость:"/>
            <TextBox x:Name="CapacityTextBox" Text="{Binding capacity}"/>
            <TextBlock Text="Цена за месяц:"/>
            <TextBox x:Name="PriceTextBox" Text="{Binding price_per_month}"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>