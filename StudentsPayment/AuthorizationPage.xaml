<Page x:Class="StudentsPayment.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuthorizationPage">
    <Grid Background="#FFE0E0E0">
        <Border Background="White" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Height="350">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
                <Grid Width="300" Height="60">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Логин:" Grid.Row="0" Grid.Column="0" Margin="0"/>
                    <TextBox x:Name="Login_TextBox" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" MaxLength="15"/>
                    <Label Content="Пароль:" Grid.Row="1" Grid.Column="0" Margin="0"/>
                    <PasswordBox x:Name="Password_PasswordBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" FontSize="14" MaxLength="15"/>
                </Grid>
                <Button x:Name="Enter_Button" Content="Войти" Width="300" Margin="0,10,0,10" Click="Enter_Button_Click" Background="#FF0078D7" Foreground="White"/>
                <Button x:Name="Registration_Button" Content="Регистрация" Width="300" Click="Registration_Button_Click" Background="#FF0078D7" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>