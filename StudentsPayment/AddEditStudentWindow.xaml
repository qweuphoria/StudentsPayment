<Window x:Class="StudentsPayment.AddEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать студента" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameTextBox" Text="{Binding first_name}"/>
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" Text="{Binding last_name}"/>
            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Text="{Binding phone_number}"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Text="{Binding email}"/>
            <TextBlock Text="Комната:"/>
            <TextBox x:Name="RoomIdTextBox" Text="{Binding room_id}"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>